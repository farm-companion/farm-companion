# Farm Companion Frontend - Environment Variables
# Copy this file to .env.local and fill in your actual values
# For Vercel deployment, set these in: Project Settings > Environment Variables

# ===================================
# CRITICAL - Required for Core Functionality
# ===================================

# Database Connection (Supabase)
DATABASE_URL="postgresql://user:password@host:5432/database"
DATABASE_POOLER_URL="postgresql://user:password@pooler-host:6543/database"

# Vercel KV (Redis) - Required for rate limiting, caching, session storage
# Get from: Vercel Dashboard > Storage > Create KV Database
KV_REST_API_URL=https://your-kv.upstash.io
KV_REST_API_TOKEN=your-kv-token-here

# Vercel Blob Storage - Required for image uploads
BLOB_READ_WRITE_TOKEN=your-vercel-blob-token

# ===================================
# MAP & SEARCH - Required for Core Features
# ===================================

# Google Maps API Key (required for map functionality)
# Get from: https://console.cloud.google.com/google/maps-apis
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Meilisearch (search engine)
MEILISEARCH_HOST=https://your-meilisearch-host.meilisearch.io
MEILISEARCH_API_KEY=your-meilisearch-api-key

# ===================================
# EMAIL & NOTIFICATIONS - Required for Contact Forms
# ===================================

# Resend Email Service
RESEND_API_KEY=your-resend-api-key
RESEND_FROM=hello@farmcompanion.co.uk
RESEND_BCC_ADMIN=admin@farmcompanion.co.uk

# Contact Form Configuration
CONTACT_FROM_EMAIL=hello@farmcompanion.co.uk
CONTACT_TO_EMAIL=hello@farmcompanion.co.uk

# ===================================
# ADMIN & SECURITY
# ===================================

# Admin Authentication
ADMIN_EMAIL=admin@farmcompanion.co.uk
ADMIN_PASSWORD=your-secure-admin-password

# CAPTCHA (choose one or both)
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
HCAPTCHA_SECRET=your-hcaptcha-secret
TURNSTILE_SECRET_KEY=your-turnstile-secret-key

# ===================================
# SEO & INDEXING
# ===================================

# Bing IndexNow
BING_INDEXNOW_KEY=your-bing-indexnow-key
INDEXNOW_KEY=your-indexnow-key
INDEXNOW_INTERNAL_TOKEN=your-internal-token

# Site Configuration
SITE_URL=https://www.farmcompanion.co.uk
NEXT_PUBLIC_SITE_URL=https://www.farmcompanion.co.uk
NEXT_PUBLIC_USE_LIVE_URL=true

# ===================================
# AI & AUTOMATION (Optional)
# ===================================

# DeepSeek API (for produce content generation)
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_BASE_URL=https://api.deepseek.com

# fal.ai (for AI image generation)
FAL_KEY=your-fal-api-key

# ===================================
# ANALYTICS (Optional)
# ===================================

# Google Analytics
NEXT_PUBLIC_GA_ENABLED=true
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GA_MEASUREMENT_ID_DEV=G-XXXXXXXXXX

# ===================================
# FEATURE FLAGS (Optional)
# ===================================

# Enable/disable forms
NEXT_PUBLIC_CONTACT_FORM_ENABLED=true
CONTACT_FORM_ENABLED=true
NEXT_PUBLIC_ADD_FORM_ENABLED=true
ADD_FORM_ENABLED=true

# Debug Mode
NEXT_PUBLIC_DEBUG_MAP=false

# ===================================
# CRON & INTERNAL APIs (Production Only)
# ===================================

# Cron Job Authentication
CRON_SECRET=your-cron-secret-key

# Photo Upload Limits
PHOTO_MAX_MB=5
PHOTO_ALLOWED_TYPES=image/jpeg,image/jpg,image/png,image/webp,image/heic

# ===================================
# REPOSITORY INFO (Optional - for documentation)
# ===================================

NEXT_PUBLIC_GH_OWNER=your-github-username
NEXT_PUBLIC_GH_REPO=farm-companion
